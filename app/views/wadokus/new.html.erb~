      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Bedeutung (Deutsch)" %><br />
    <%= f.text_field :translation %>
  </div>
  <div class="field">
    <%= f.label "Schreibung (Japanisch)" %><br />
    <%= f.text_area :writing %>
  </div>
  <div class="field">
    <%= f.label "Lesung (Romaji)" %><br />
    <%= f.text_field :reading %>
  </div>

<% end %>

